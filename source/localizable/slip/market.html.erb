---
title_key: market.meta.title
description_key: market.meta.description
layout: market
---

<main class="market-landing">
    <header class="market-header">
        <div class="market-container market-header-inner">
            <a class="market-brand" href="<%= localized_path('/slip/') %>">
                <img src="/images/slip/logo.png" alt="<%= t('common.brand_alt') %>" class="market-brand-logo" />
                <span class="market-brand-name"><%= t('common.brand') %></span>
            </a>
            <div class="market-header-actions">
                <span class="market-header-tag"><%= t('market.header.tag') %></span>
                <div class="market-locale">
                    <a href="<%= alternate_locale_path(:en) %>" data-set-locale="en"><%= t('common.locale.en') %></a>
                    <span class="market-locale-divider">/</span>
                    <a href="<%= alternate_locale_path(:"zh-TW") %>" data-set-locale="zh-TW"><%= t('common.locale.zh_tw') %></a>
                </div>
            </div>
        </div>
    </header>

    <section class="market-hero">
        <div class="market-container market-hero-grid">
            <div class="market-hero-content">
                <p class="market-kicker"><%= t('market.hero.kicker') %></p>
                <h1 class="market-hero-title"><%= t('market.hero.title') %></h1>
                <p class="market-hero-subtitle"><%= t('market.hero.subtitle_html') %></p>
                <div class="market-hero-actions">
                    <a class="market-btn market-btn-primary" href="https://apps.apple.com/us/app/slip-pos/id6747707174" target="_blank" rel="noopener" data-analytics-label="market_hero_download"><%= t('market.hero.download') %></a>
                    <p class="market-hero-note"><%= t('market.hero.note') %></p>
                </div>
                <div class="market-highlight-row">
                    <div class="market-highlight"><%= t('market.hero.highlights.first') %></div>
                    <div class="market-highlight"><%= t('market.hero.highlights.second') %></div>
                    <div class="market-highlight"><%= t('market.hero.highlights.third') %></div>
                </div>
            </div>
            <div class="market-hero-visual">
                <div class="market-hero-photo">
                    <svg viewBox="0 0 480 360">
                        <defs>
                            <linearGradient id="market-sky" x1="0" y1="0" x2="1" y2="1">
                                <stop offset="0%" stop-color="#ffe8d4" />
                                <stop offset="100%" stop-color="#fff8ef" />
                            </linearGradient>
                            <linearGradient id="market-table" x1="0" y1="0" x2="1" y2="0">
                                <stop offset="0%" stop-color="#d8b49a" />
                                <stop offset="100%" stop-color="#c99b79" />
                            </linearGradient>
                        </defs>
                        <rect width="480" height="360" rx="28" fill="url(#market-sky)" />
                        <circle cx="70" cy="90" r="36" fill="#f5b58e" opacity="0.6" />
                        <circle cx="140" cy="70" r="28" fill="#f2a97e" opacity="0.5" />
                        <circle cx="410" cy="120" r="44" fill="#efb282" opacity="0.45" />
                        <rect x="40" y="210" width="400" height="100" rx="22" fill="url(#market-table)" />
                        <rect x="110" y="150" width="120" height="90" rx="12" fill="#f9f6f3" />
                        <rect x="125" y="162" width="90" height="60" rx="6" fill="#1f2937" />
                        <rect x="260" y="160" width="110" height="65" rx="10" fill="#f7ede2" />
                        <rect x="280" y="175" width="70" height="8" rx="4" fill="#d7b9a2" />
                        <rect x="280" y="190" width="70" height="8" rx="4" fill="#d7b9a2" />
                        <rect x="300" y="225" width="30" height="40" rx="6" fill="#f9f3ee" />
                        <rect x="300" y="230" width="30" height="6" rx="3" fill="#d7b9a2" />
                        <rect x="300" y="242" width="30" height="6" rx="3" fill="#d7b9a2" />
                        <rect x="300" y="254" width="20" height="6" rx="3" fill="#d7b9a2" />
                        <circle cx="370" cy="245" r="10" fill="#f0c4a3" />
                        <circle cx="405" cy="235" r="12" fill="#f3b78e" />
                        <circle cx="435" cy="255" r="14" fill="#f5c5a4" />
                    </svg>
                    <div class="market-hero-photo-label"><%= t('market.hero.visual_label') %></div>
                </div>
            </div>
        </div>
    </section>

    <section class="market-section market-pain">
        <div class="market-container">
            <h2 class="market-section-title"><%= t('market.pain.title') %></h2>
            <ul class="market-pain-list">
                <li><%= t('market.pain.items.first') %></li>
                <li><%= t('market.pain.items.second') %></li>
                <li><%= t('market.pain.items.third') %></li>
                <li><%= t('market.pain.items.fourth') %></li>
            </ul>
        </div>
    </section>

    <section class="market-section market-solution">
        <div class="market-container market-solution-grid">
            <div class="market-solution-content">
                <h2 class="market-section-title"><%= t('market.solution.title') %></h2>
                <ul class="market-feature-list">
                    <li><%= t('market.solution.items.first') %></li>
                    <li><%= t('market.solution.items.second') %></li>
                    <li><%= t('market.solution.items.third') %></li>
                    <li><%= t('market.solution.items.fourth') %></li>
                </ul>
                <p class="market-solution-note"><%= t('market.solution.note') %></p>
            </div>
            <div class="market-visual-grid">
                <figure class="market-visual-card">
                    <div class="market-receipt">
                        <div class="market-receipt-header"><%= t('market.solution.receipt.header') %></div>
                        <div class="market-receipt-lines">
                            <span></span>
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                        <div class="market-receipt-total"><%= t('market.solution.receipt.total') %></div>
                    </div>
                    <figcaption><%= t('market.solution.captions.receipt') %></figcaption>
                </figure>
                <figure class="market-visual-card">
                    <div class="market-ipad-frame">
                        <img src="/images/slip/slip_ipad_screen.png" alt="<%= t('market.solution.captions.ipad_alt') %>" loading="lazy" decoding="async" />
                    </div>
                    <figcaption><%= t('market.solution.captions.ipad') %></figcaption>
                </figure>
            </div>
        </div>
    </section>

    <section class="market-section market-use-cases">
        <div class="market-container">
            <h2 class="market-section-title"><%= t('market.use_cases.title') %></h2>
            <div class="market-use-grid">
                <span><%= t('market.use_cases.items.first') %></span>
                <span><%= t('market.use_cases.items.second') %></span>
                <span><%= t('market.use_cases.items.third') %></span>
                <span><%= t('market.use_cases.items.fourth') %></span>
            </div>
        </div>
    </section>

    <section class="market-section market-social-proof">
        <div class="market-container">
            <h2 class="market-section-title"><%= t('market.social.title') %></h2>
            <blockquote class="market-quote"><%= t('market.social.quote') %></blockquote>
            <p class="market-quote-note"><%= t('market.social.note') %></p>
        </div>
    </section>

    <section class="market-section market-final-cta">
        <div class="market-container">
            <div class="market-cta-card">
                <div>
                    <h2 class="market-section-title"><%= t('market.final.title') %></h2>
                    <p class="market-cta-subtitle"><%= t('market.final.subtitle') %></p>
                    <ul class="market-cta-notes">
                        <li><%= t('market.final.notes.first') %></li>
                        <li><%= t('market.final.notes.second') %></li>
                        <li><%= t('market.final.notes.third') %></li>
                    </ul>
                </div>
                <a class="market-btn market-btn-primary" href="https://apps.apple.com/us/app/slip-pos/id6747707174" target="_blank" rel="noopener" data-analytics-label="market_final_cta_download"><%= t('market.final.cta') %></a>
            </div>
        </div>
    </section>
</main>

<footer class="market-footer">
    <div class="market-container">
        <div class="market-footer-row">
            <span><%= t('market.footer.brand') %></span>
            <span><%= t('market.footer.tagline') %></span>
            <span><%= t('market.footer.contact') %></span>
        </div>
    </div>
</footer>

<div class="market-cta-bar" role="region" aria-label="<%= t('market.cta_bar.label') %>">
    <div class="market-cta-bar-inner">
        <span><%= t('market.cta_bar.question') %></span>
        <a class="market-btn market-btn-primary" href="https://apps.apple.com/us/app/slip-pos/id6747707174" target="_blank" rel="noopener" data-analytics-label="market_bar_download"><%= t('market.cta_bar.cta') %></a>
    </div>
</div>
