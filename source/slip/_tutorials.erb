<section id="tutorials" class="tutorials">
    <div class="section-container">
        <p class="section-subtitle"><%= t('slip.tutorials.subtitle') %></p>
        <h3 class="section-title"><%= t('slip.tutorials.title') %></h3>
        <p class="section-lede"><%= t('slip.tutorials.lede') %></p>

        <div class="tutorials-grid">
            <a class="tutorial-card" href="<%= localized_path('/slip/tutorial/menu-import-with-chatgpt/') %>">
                <div class="tutorial-card-meta">
                    <span class="tutorial-tag"><%= t('slip.tutorials.cards.menu_import.duration') %></span>
                </div>
                <h4><%= t('slip.tutorials.cards.menu_import.title') %></h4>
                <p><%= t('slip.tutorials.cards.menu_import.description') %></p>
                <span class="tutorial-cta"><%= t('slip.tutorials.cards.menu_import.cta') %></span>
            </a>

            <div class="tutorial-card is-disabled">
                <div class="tutorial-card-meta">
                    <span class="tutorial-tag tutorial-tag--muted"><%= t('slip.tutorials.cards.printer.status') %></span>
                </div>
                <h4><%= t('slip.tutorials.cards.printer.title') %></h4>
                <p><%= t('slip.tutorials.cards.printer.description') %></p>
                <span class="tutorial-cta"><%= t('slip.tutorials.cards.printer.cta') %></span>
            </div>

            <div class="tutorial-card is-disabled">
                <div class="tutorial-card-meta">
                    <span class="tutorial-tag tutorial-tag--muted"><%= t('slip.tutorials.cards.opening.status') %></span>
                </div>
                <h4><%= t('slip.tutorials.cards.opening.title') %></h4>
                <p><%= t('slip.tutorials.cards.opening.description') %></p>
                <span class="tutorial-cta"><%= t('slip.tutorials.cards.opening.cta') %></span>
            </div>
        </div>

        <div class="tutorials-footer">
            <a class="btn btn-secondary" href="<%= localized_path('/slip/tutorial/') %>"><%= t('slip.tutorials.view_all') %></a>
        </div>
    </div>
</section>
