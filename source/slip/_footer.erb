<footer class="footer">
    <div class="footer-container">
        <div class="footer-content">
            <div class="footer-brand">
                <div class="footer-logo">
                    <img src="/images/slip/logo.png" alt="<%= t('common.brand_alt') %>" class="footer-logo-img">
                </div>
                <p class="footer-description"><%= t('slip.footer.tagline') %></p>
            </div>

            <div class="footer-links">
                <div class="footer-section">
                    <h6 class="footer-title"><%= t('slip.footer.product_title') %></h6>
                    <ul class="footer-list">
                        <li><a href="<%= localized_path('/slip/#reliability') %>" class="footer-link"><%= t('slip.footer.reliability') %></a></li>
                        <li><a href="<%= localized_path('/slip/#free-plan') %>" class="footer-link"><%= t('slip.footer.free_plan') %></a></li>
                        <li><a href="<%= localized_path('/slip/#local-first') %>" class="footer-link"><%= t('slip.footer.local_first') %></a></li>
                    </ul>
                </div>

                <div class="footer-section">
                    <h6 class="footer-title"><%= t('slip.footer.program_title') %></h6>
                    <ul class="footer-list">
                        <li><a href="<%= localized_path('/slip/early-operators/') %>" class="footer-link"><%= t('slip.footer.early_operators') %></a></li>
                        <li><a href="<%= localized_path('/slip/#stories') %>" class="footer-link"><%= t('slip.footer.stories') %></a></li>
                    </ul>
                </div>

                <div class="footer-section">
                    <h6 class="footer-title"><%= t('slip.footer.support_title') %></h6>
                    <ul class="footer-list">
                        <li><a href="<%= localized_path('/slip/tutorial/') %>" class="footer-link"><%= t('slip.footer.tutorials') %></a></li>
                        <li><a href="<%= localized_path('/slip/#faq') %>" class="footer-link"><%= t('slip.footer.faq') %></a></li>
                        <li><a href="https://tally.so/r/wAMX1l" class="footer-link" target="_blank"><%= t('slip.footer.contact') %></a></li>
                        <li><a href="<%= localized_path('/slip/support/') %>" class="footer-link" target="_blank"><%= t('slip.footer.support_page') %></a></li>
                    </ul>
                </div>

                <!-- <div class="footer-section">
                    <h6 class="footer-title">公司</h6>
                    <ul class="footer-list">
                        <li><a href="#about" class="footer-link">關於我們</a></li>
                        <li><a href="#careers" class="footer-link">加入我們</a></li>
                        <li><a href="#news" class="footer-link">最新消息</a></li>
                        <li><a href="#blog" class="footer-link">開發日誌</a></li>
                    </ul>
                </div> -->

                <div class="footer-section">
                    <h6 class="footer-title"><%= t('slip.footer.legal_title') %></h6>
                    <ul class="footer-list">
                        <li><a href="<%= localized_path('/slip/privacy/') %>" class="footer-link" target="_blank"><%= t('slip.footer.privacy') %></a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="footer-copyright">
                <p><%= t('slip.footer.copyright') %></p>
            </div>
            <div class="footer-social">
                <% if data.social_links %>
                    <% data.social_links.each do |link| %>
                        <a href="<%= link.url %>" class="social-link" aria-label="<%= link.label %>"<% if link.new_tab %> target="_blank" rel="noopener"<% end %>>
                            <%= partial "slip/social_icon", locals: { name: link.name } %>
                        </a>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</footer>
