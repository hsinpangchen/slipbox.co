<section id="pricing" class="pricing">
    <div class="pricing-container">
        <h3 class="section-title"><%= t('slip.pricing.title') %></h3>
        <div class="pricing-card">
            <div class="pricing-header">
                <h4><%= t('slip.pricing.plan.title') %></h4>
                <div class="price">
                    <span class="currency"><%= t('slip.pricing.plan.price.currency') %></span>
                    <span class="amount"><%= t('slip.pricing.plan.price.amount') %></span>
                    <span class="period"><%= t('slip.pricing.plan.price.period') %></span>
                </div>
            </div>
            <ul class="pricing-features">
                <li><%= t('slip.pricing.plan.features.first') %></li>
                <li><%= t('slip.pricing.plan.features.second') %></li>
                <li><%= t('slip.pricing.plan.features.third') %></li>
                <li><%= t('slip.pricing.plan.features.fourth') %></li>
                <li><%= t('slip.pricing.plan.features.fifth') %></li>
            </ul>
            <button class="btn btn-primary pricing-btn"><%= t('slip.pricing.plan.cta') %></button>
        </div>
    </div>
</section>
